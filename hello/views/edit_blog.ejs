        // save_blog_xhr.onreadystatechange = save_result;
        // save_blog_xhr.send(save_blog_fd);
        alert("准备提交数据");
         $.ajax({
             type: "POST",
             url: "/save_blog",
             data: {blog_title:b_title, blog_body:b_html},
